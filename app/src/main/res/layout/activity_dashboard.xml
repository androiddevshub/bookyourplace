<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.DashboardActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/imgageback2"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/tvExplore"
            android:layout_margin="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.2"
            android:background="@android:color/darker_gray"
            android:id="@+id/rlgreyline1"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tvExplore"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="20dp"
            android:layout_below="@id/rlgreyline1">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginRight="7.5dp"
                android:layout_width="wrap_content"
                android:background="@drawable/layout_round"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgH"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:id="@+id/tvHistoricalPlaces"
                    android:layout_below="@id/imgH"
                    android:layout_marginTop="-15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Historical Places"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@android:color/black"
                    android:padding="5dp"
                    android:layout_below="@id/tvHistoricalPlaces"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Historical Places"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginLeft="7.5dp"
                android:background="@drawable/layout_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgP"
                    android:src="@drawable/hotel"
                    android:scaleType="centerCrop"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:id="@+id/tvHotels"
                    android:layout_below="@id/imgH"
                    android:layout_marginTop="-15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Hotels"/>

            </RelativeLayout>


         </LinearLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommend For You"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"/>

        <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:listitem="@layout/layout_hotel">-->

        <!--</androidx.recyclerview.widget.RecyclerView>-->


    </LinearLayout>

</LinearLayout>

