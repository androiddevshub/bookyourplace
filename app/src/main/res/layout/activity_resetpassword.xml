<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo_app"
        android:alpha=".1">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Please enter OTP and new passwords to reset password of your account"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:background="@drawable/transparent_round"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/et_otp_resetpassword"
            android:drawableRight="@drawable/ic_password"
            android:hint="OTP"
            android:textColorHint="@android:color/black"
            android:padding="10dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/transparent_round"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/et_reset_password"
            android:drawableRight="@drawable/ic_password"
            android:hint="Password"
            android:textColorHint="@android:color/black"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/transparent_round"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/ic_password"
            android:hint="Confirm Password"
            android:id="@+id/et_reset_cpassword"
            android:textColorHint="@android:color/black"
            android:padding="10dp"
            android:layout_marginLeft="20dp"/>



        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Update"
            android:textAllCaps="false"
            android:id="@+id/btn_resetPassword"
            android:textColor="@android:color/white"
            android:background="@drawable/button_round"/>



    </LinearLayout>

</RelativeLayout>