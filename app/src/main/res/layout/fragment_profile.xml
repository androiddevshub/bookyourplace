<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! Enjoying the app"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/tvHello"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvHello"
        android:id="@+id/tvProfileUsername"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tvProfileUsername"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/profileEmailInfo"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="Email : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="shubjain440@gmail.com"
            android:textSize="20sp"
            android:id="@+id/tvProfileUseremail"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/profileEmailInfo"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/profileMobileInfo"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="Mobile : "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="9876543210"
            android:textSize="20sp"
            android:id="@+id/tvProfileUserPhone"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:padding="20dp"
        android:id="@+id/btnLogoutuser"
        android:layout_marginTop="50dp"
        android:layout_below="@id/profileMobileInfo"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/btn_booking"/>


</RelativeLayout>